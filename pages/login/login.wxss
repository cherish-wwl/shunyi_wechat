/* pages/yiwo/login/login.wxss */
page{
  background-color:#eee;
}
.userhead {
  margin-top: 120rpx;
  height: 100rpx;
  margin-bottom: 160rpx;
  text-align: center;
}

.user-icon {
  width: 180rpx;
  height: 180rpx;
  border-radius: 80rpx;
  vertical-align: middle;
  background: deepskyblue;
}

form{
  display:flex;
  padding:0 15px;
  background-color:#fff;
  align-items: center;
  justify-content: center;
  margin-bottom:40rpx;
}
.useritemView {
 
  height: 40px;
  
  justify-content: center;
  display: flex;
  align-items: center;
}
.useritemView:first-child{
  border-bottom:1px solid #ddd;
}

.usertext {
  width: 80px;
  text-align: center;
}

.userinput {
  width: 180px;
  height: 30px;
  /* border: 1px solid lightgray; */
  border-radius: 10px;
}

/* .loginBtn {
  margin: 25px;
  background: blue;
  color: white;
} */
.btn {
  margin:20rpx 10rpx 0;
  background:#2769dc;
  color:white;
  border-radius:0;
  font-size:15px;
}

.user-rem {
  margin-top: 10px;
  margin-left: 25px;
  margin-right: 25px;
  display: flex;
  align-items: center;
}

.useritemView-image {
  margin-top: 5px;
  margin-left: 25px;
  width: 100px;
  height: 40px;
  justify-content: flex-start;
  display: flex;
  align-items: center;
}

.user-image {
  width: 15px;
  height: 15px;
}

.tool-line{
  display:flex;
  justify-content:space-around;
  margin-top:36rpx;
}
.font16{
  font-size: 16px;
}
.font15{
  font-size: 15px;
}
.fc_888{
  color: #888;
}
.fb_600{
  font-weight: 600;
}

